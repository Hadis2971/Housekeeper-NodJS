<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Housekeeper App</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/styles/addressBook.css">
    </head>
    <body ng-app="myApp" ng-controller="appCtrl">

        <div class="modal">
            <span id="close-modal">&times;</span>
            <div class="modal-content">
                <h5 style="color:#008ae6;font-weight:300;">Change Contact Information</h5>   
                    <div class="form-group">
                    <input type="text" class="form-control" id="contactName">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="contactLast">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="homeNumber">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="mobileNumber">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="homeAddress">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" id="emailAddress">
                    </div>
                    <button id="change-btn" class="btn btn-warning">Change!</button>
                    <button id="delete-btn" class="btn btn-danger">Delete Contact!!!</button>
            </div>
        </div>
        <h1 class="display-6 text-center mb-4" style="color:#008ae6;font-weight:300;">Address Book</h1>
        <form id="address-form" action="/address/addContact" method="POST">
        <h4 style="color:#008ae6;font-weight:300;">Add a New Contact</h4>

            <div class="form-row">
                <div class="form-group col">
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" id="firstName" class="form-control">
                </div>
                <div class="form-group col">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName" class="form-control">
                </div>
            </div>    
            <div class="form-row">
                <div class="form-group col">
                <label for="phoneNumber">Home Phone Number</label>
                <input type="text" name="phoneNumber" id="phoneNumber" class="form-control">
                </div>
                <div class="form-group col">
                    <label for="moblieNumber">Mobile Phone Number</label>
                    <input type="text" name="moblieNumber" id="moblieNumber" class="form-control">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">
                <label for="contactAddress">Home Address</label>
                <input type="text" name="contactAddress" id="contactAddress" class="form-control">
                </div>
                <div class="form-group col">
                    <label for="contactEmail">Email Address</label>
                    <input type="email" name="contactEmail" id="contactEmail" class="form-control">
                </div>
            </div>
            <button id="add-btn" type="submit" class="btn btn-success">Add Contact</button>
        </form>
        <div class="form-group" style="margin-top:3%;">
            <input type="search" ng-model="search" class="form-control" ng-model="search" id="searchInput" placeholder="Search For Contact...">
        </div>
        <table class="table" style="margin-top:3%;">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Home Phone</th>
                <th>Mobile Phone</th>
                <th>Home Address</th>
                <th>Email Address</th>
            </thead>
            <tbody filter-list="search">
                {{#each contacts}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.last}}</td>
                    <td>{{this.home}}</td>
                    <td>{{this.mobile}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.email}}</td>      
                </tr>
                {{/each}}
            </tbody>
        </table>
        <script src="/scripts/angularJS.js"></script>
        <script src="/scripts/jQuery.js"></script>
        <script src="/scripts/addressBookMain.js"></script>
    </body>
</html>