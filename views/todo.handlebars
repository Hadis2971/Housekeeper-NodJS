<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Housekeeper App</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/styles/todo.css">
    </head>
    <body>
        <h1 class="display-6 text-center" style="color:#008ae6;font-weight:300;">Task Manager</h1>
        <div class="row">
            <div class="col" id="box-parent">
                <div id="todo-box">
                    <h4 class="text-center" style="color:#008ae6;font-weight:300;">Create a New List With Tasks</h4>
                    <div class="form-group">
                        <input id="list-name-input" type="text" class="form-control" placeholder="Name of list...">
                    </div>
                    <button id="create-btn" class="btn btn-success">Create</button>
                </div>
            </div>
        </div>    
        <script src="/scripts/todoMain.js"></script>
    </body>
</html>